@startuml
title "Мобильное приложение для покупки билетов на транспорт"

actor пассажир  #mediumvioletred 
boundary "выбор маршрута" as выбор #darkgreen
entity "покупка билетов" as покупка #Yellow
entity "получение уведомления" #red
actor "Проверка билета контролером" as проверка #orange
пассажир -> выбор: <:sunglasses:>
выбор  -> покупка
покупка -> "получение уведомления" #black
пассажир <--  "получение уведомления" #Yellow
"получение уведомления" --> проверка: <:fearful:>
 entity "возврат билета" as возврат #midnightblue
пассажир <- возврат 
@enduml
